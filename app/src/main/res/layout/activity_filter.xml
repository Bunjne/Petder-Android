<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity.Filter">

    <ImageView
            android:id="@+id/ivBack_filter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
    <TextView
            android:id="@+id/tvTitle_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ivBack_filter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:text="Filter"
            android:textSize="26dp"
            android:textColor="#000" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>
    <TextView
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle_filter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="20dp"
            android:textColor="#000"/>
    <Spinner
            android:id="@+id/spinnerGender_filter"
            android:layout_width="0dp"
            android:layout_height="?attr/dropdownListPreferredItemHeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:popupElevation="3dp"
            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/blue_rectangle_spinner"
            android:spinnerMode="dropdown"
            style="@style/Widget.AppCompat.Spinner"/>
    <TextView
            android:text="Breeding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerGender_filter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="20dp"
            android:textColor="#000"/>
    <Spinner
            android:id="@+id/spinnerBreeding_filter"
            android:layout_width="0dp"
            android:layout_height="?attr/dropdownListPreferredItemHeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:popupElevation="3dp"
            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/blue_rectangle_spinner"
            android:spinnerMode="dropdown"
            style="@style/Widget.AppCompat.Spinner"/>
    <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerBreeding_filter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="20dp"
            android:textColor="#000"/>
    <Spinner
            android:id="@+id/spinnerAge_filter"
            android:layout_width="0dp"
            android:layout_height="?attr/dropdownListPreferredItemHeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:popupElevation="3dp"
            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/blue_rectangle_spinner"
            android:spinnerMode="dropdown"
            style="@style/Widget.AppCompat.Spinner"/>
    <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAge_filter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="20dp"
            android:textColor="#000"/>
    <Spinner
            android:id="@+id/spinnerLocation_filter"
            android:layout_width="0dp"
            android:layout_height="?attr/dropdownListPreferredItemHeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:popupElevation="3dp"
            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/blue_rectangle_spinner"
            android:spinnerMode="dropdown"
            style="@style/Widget.AppCompat.Spinner"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
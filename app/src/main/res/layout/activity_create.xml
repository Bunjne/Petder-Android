<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateActivity">

    <ImageView
            android:id="@+id/ivBack_create"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
    <TextView
            android:id="@+id/tvTitle_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ivBack_create"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:text="Create"
            android:textSize="26dp"
            android:textColor="#000" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2_create"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle_create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/linearLayout2_create">
        <ImageView
                android:id="@+id/ivEdit_create"
                android:src="@drawable/plus_fix_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_border_rectangle"
                android:padding="24dp"
                android:layout_marginEnd="12dp"
        />
        <ImageView
                android:id="@+id/ivEdit_2_create"
                android:src="@drawable/plus_fix_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:background="@drawable/black_border_rectangle"
                android:padding="24dp"/>
        <ImageView
                android:id="@+id/ivEdit_3_create"
                android:src="@drawable/plus_fix_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_border_rectangle"
                android:padding="24dp"
                android:layout_marginEnd="12dp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="95dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2_create"
            android:id="@+id/linearLayout3_create"
    >
        <ImageView
                android:id="@+id/ivEdit_4_create"
                android:src="@drawable/plus_fix_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_border_rectangle"
                android:layout_marginEnd="12dp"
                android:padding="24dp"/>
        <ImageView
                android:id="@+id/ivEdit_5_create"
                android:src="@drawable/plus_fix_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:background="@drawable/black_border_rectangle"
                android:padding="24dp"/>
        <ImageView
                android:id="@+id/ivEdit_6_create"
                android:src="@drawable/plus_fix_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_border_rectangle"
                android:padding="24dp"
                android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <TextView
            android:id="@+id/tvTitle1_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3_create"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:gravity="start"
            android:text="Pet"
            android:textColor="#000"
            android:textSize="20dp"
            android:drawableStart="@drawable/sky_blue_fixed_size"/>
    <TextView
            android:id="@+id/tvNot_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle1_create"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textSize="18dp"
            android:textColor="@color/grey"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etName_create"
            android:hint="Cat's name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle1_create"
            android:gravity="end"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@android:color/transparent"/>
    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/grey"
          app:layout_constraintTop_toBottomOf="@+id/tvNot_create"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
          android:layout_marginTop="10dp" android:id="@+id/view2_create"/>
    <TextView
            android:id="@+id/tvNot1_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view2_create"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:text="Breeding"
            android:textColor="@color/grey"
            android:textSize="18dp"/>
    <Spinner
            android:id="@+id/spinnerBreeding_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@+id/view2_create"
            app:layout_constraintBottom_toTopOf="@+id/view3_create"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:popupElevation="3dp"
            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:spinnerMode="dropdown"
            style="@style/Widget.AppCompat.Spinner"
            android:background="@android:color/transparent"
    />
    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/grey"
          app:layout_constraintTop_toBottomOf="@+id/tvNot1_create" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
          android:layout_marginTop="10dp" android:id="@+id/view3_create"/>
    <TextView
            android:id="@+id/tvNot2_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view3_create"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:text="Birth Date"
            android:textColor="@color/grey"
            android:textSize="18dp"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAge_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view3_create"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:hint="DD/MM/YYYY"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@android:color/transparent"/>
    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/grey"
          app:layout_constraintTop_toBottomOf="@+id/tvNot2_create" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
          android:layout_marginTop="10dp" android:id="@+id/view4_create"/>
    <TextView
            android:id="@+id/tvNot3_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view4_create"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:text="Gender"
            android:textColor="@color/grey"
            android:textSize="18dp"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etGender_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view4_create"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:hint="Cat's gender"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@android:color/transparent"/>
    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/grey"
          app:layout_constraintTop_toBottomOf="@+id/tvNot3_create" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
          android:layout_marginTop="10dp" android:id="@+id/view5_create"/>
    <TextView
            android:id="@+id/tvNot4_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view5_create"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:text="Description"
            android:textColor="@color/grey"
            android:textSize="18dp"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etDescription_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view5_create"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:hint="Cat's description"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@android:color/transparent"/>
    <Button
            android:id="@+id/btDone_create"
            android:text="Done"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNot4_create"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/blue_gradient_button"
            android:textColor="@color/white"
            android:textSize="18dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
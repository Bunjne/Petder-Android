<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.HomeFragment">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
            android:id="@+id/frame_home"
            android:background="#ffeee9e2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:rotation_degrees="15.5"
            tools:context=".MyActivity"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5" app:layout_constraintHorizontal_bias="0.4"
            android:layout_marginBottom="16dp"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout5"
            android:gravity="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btLeft_home"
                android:src="@drawable/block"
                android:layout_marginRight="50dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:layout_editor_absoluteX="313dp" tools:layout_editor_absoluteY="673dp"
        />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btRight_home"
                android:src="@drawable/like"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="10dp" tools:layout_editor_absoluteY="673dp"
        />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:id="@+id/constraint_chat">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile_chat"
            android:src="@drawable/cat_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
    />
    <TextView
            android:id="@+id/tvName_chat"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/ivProfile_chat"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    <TextView
            android:text="Hello world!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMessage_chat" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName_chat" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/ivProfile_chat"
            android:textColor="@color/grey"
            android:textSize="14dp"/>
    <TextView
            android:id="@+id/tvTime_chat"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textSize="14dp"
            android:textColor="@color/grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>